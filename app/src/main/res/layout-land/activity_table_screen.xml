<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TableRow
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/player3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black_overlay"
            android:gravity="center"
            android:text="Player 3"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txvMoneyPLayer3"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/player3"
            android:layout_marginLeft="5dp"
            android:background="@color/lightGrey"
            android:gravity="center"
            android:text="1000"
            android:textSize="22sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/player2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:background="@color/black_overlay"
            android:gravity="center"
            android:text="Player 2"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txvMoneyPLayer2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/player2"
            android:layout_marginLeft="5dp"
            android:background="@color/lightGrey"
            android:gravity="center"
            android:text="1000"
            android:textSize="22sp" />
    </TableRow>

    <RelativeLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/row1"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/player4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="3dp"
            android:background="@color/black_overlay"
            android:gravity="center"
            android:text="CPU4"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txvMoneyPLayer4"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/player4"
            android:layout_marginTop="5dp"
            android:background="@color/lightGrey"
            android:gravity="center"
            android:text="1000"
            android:textSize="22sp" />

        <RelativeLayout
            android:id="@+id/table"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/player4"
            android:background="#101126">

            <TableRow
                android:id="@+id/tbRowP3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtP3card1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SK"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtP3card2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SQ"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtP3card3"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SJ"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tbRowP4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="110dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtP4card1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SK"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtP4card2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SQ"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtP4card3"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SJ"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tbRowP2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="25dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtP2card1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SK"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtP2card2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SQ"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtP2card3"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SJ"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tbRowP1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="110dp"
                android:layout_marginRight="2dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtP1card1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SK"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtP1card2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SQ"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtP1card3"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SJ"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tbRowP5"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtP5card1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SK"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtP5card2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SQ"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtP5card3"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SJ"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </TableRow>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pot"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/pot_shape"
                android:gravity="center"
                android:text="0"
                android:textColor="#14aea1"
                android:textSize="35sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_pot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/pot"
                android:layout_marginLeft="15dp"
                android:text="Pot"
                android:textColor="@color/cyan"
                android:textSize="40sp" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/player1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/table"
            android:background="@color/black_overlay"
            android:gravity="center"
            android:text="Player 1"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txvMoneyPLayer1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/player1"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/table"
            android:background="@color/lightGrey"
            android:gravity="center"
            android:text="1000"
            android:textSize="22sp" />

    </RelativeLayout>

    <TableRow
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/row2"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/player5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black_overlay"
            android:gravity="center"
            android:text="Player 5"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txvMoneyPLayer5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/player5"
            android:layout_marginLeft="5dp"
            android:background="@color/lightGrey"
            android:gravity="center"
            android:text="1000"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tbRowFnBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:visibility="visible">

        <Button
            android:id="@+id/btnFold"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="#2395c2"
            android:text="Fold"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnShow"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#2395c2"
            android:text="Show"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnRaise"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#2395c2"
            android:text="next Turn"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="25sp" />
    </TableRow>
</RelativeLayout>
